# Routes
# This file defines all application routes (Higher priority routes first)

# Home page and transform
GET     /                           controllers.HomeController.index(request: Request)
POST    /                           controllers.HomeController.transform(request: Request)

# Fiddle operations
GET     /list                       controllers.HomeController.list(request: Request)
POST    /save                       controllers.HomeController.save(request: Request)
POST    /pdf                        controllers.HomeController.pdf(request: Request)
POST    /download                   controllers.HomeController.download(request: Request)

# JavaScript routes
GET     /jsRoutes                   controllers.HomeController.jsRoutes(request: Request)

# Get XML/XSL by ID
GET     /xml/:id                    controllers.HomeController.xml(request: Request, id: String, revision: Int ?= 1)
GET     /xsl/:id                    controllers.HomeController.xsl(request: Request, id: String, revision: Int ?= 1)

# Load fiddle by short ID
GET     /:id                        controllers.HomeController.fiddle(request: Request, id: String, revision: Int ?= 1)
GET     /:id/:revision              controllers.HomeController.fiddleWithRevision(request: Request, id: String, revision: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
